{
  "multipart": [
    { "when": {"north_con":  false, "south_con":  false, "west_con":  false, "east_con":  false},
      "apply":  {"model":  "extfar:block/base_hose"}},
    {
      "when":  {"north_con":  true, "is_active":  true},
      "apply": { "model": "extfar:block/hose_active", "y": 90  }
    },
    {
      "when":  {"north_con":  true, "is_active":  false},
      "apply": { "model": "extfar:block/hose", "y": 90 }
    },
    {
      "when":  {"south_con":  true, "is_active":  true},
      "apply": { "model": "extfar:block/hose_active", "y": 270  }
    },
    {
      "when":  {"south_con":  true, "is_active":  false},
      "apply": { "model": "extfar:block/hose", "y": 270 }
    },    {
      "when":  {"west_con":  true, "is_active":  true},
      "apply": { "model": "extfar:block/hose_active", "y": 0  }
    },
    {
      "when":  {"west_con":  true, "is_active":  false},
      "apply": { "model": "extfar:block/hose", "y": 0 }
    },    {
      "when":  {"east_con":  true, "is_active":  true},
      "apply": { "model": "extfar:block/hose_active", "y": 180  }
    },
    {
      "when":  {"east_con":  "true", "is_active":  false},
      "apply": { "model": "extfar:block/hose", "y": 180 }
    }
  ]
}