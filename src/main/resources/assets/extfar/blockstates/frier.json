{
  "multipart": [
    {
      "when":  { "facing":  "north" },
      "apply": { "model": "extfar:block/frier", "y": 180  }
    },
    {
      "when":  { "facing":  "south" },
      "apply": { "model": "extfar:block/frier", "y": 0  }
