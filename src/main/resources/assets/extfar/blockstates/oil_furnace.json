{
  "multipart": [
    {
      "when":  { "facing":  "north" },
      "apply": { "model": "extfar:block/oil_furnace", "y": 180  }
    },
    {
      "when":  { "facing":  "south" },
      "apply": { "model": "extfar:block/oil_furnace", "y": 0  }
    },
    {
      "when":  { "facing":  "east" },
      "apply": { "model": "extfar:block/oil_furnace", "y": 270  }
    },
    {
      "when":  { "facing":  "west" },
      "apply": { "model": "extfar:block/oil_furnace", "y": 90  }
    },

    {
      "when":  { "facing":  "north","has_oil": true },
      "apply": { "model": "extfar:block/oil", "y": 180  }
    },
    {
      "when":  { "facing":  "south","has_oil": true },
      "apply": { "model": "extfar:block/oil", "y": 0  }
    },
    {
      "when":  { "facing":  "east","has_oil": true },
      "apply": { "model": "extfar:block/oil", "y": 270  }
    },
    {
      "when":  { "facing":  "west","has_oil": true },
      "apply": { "model": "extfar:block/oil", "y": 90  }
    },

    {
      "when":  { "facing":  "north","has_tank": true },
      "apply": { "model": "extfar:block/empty_cannister", "y": 180  }
    },
    {
      "when":  { "facing":  "south","has_tank": true },
      "apply": { "model": "extfar:block/empty_cannister", "y": 0  }
    },
    {
      "when":  { "facing":  "east","has_tank": true },
      "apply": { "model": "extfar:block/empty_cannister", "y": 270  }
    },
    {
      "when":  { "facing":  "west","has_tank": true },
      "apply": { "model": "extfar:block/empty_cannister", "y": 90  }
    },

    {
      "when":  { "facing":  "north","door_open": true },
      "apply": { "model": "extfar:block/oil_furnace_door_open", "y": 180  }
    },
    {
      "when":  { "facing":  "south","door_open": true },
      "apply": { "model": "extfar:block/oil_furnace_door_open", "y": 0  }
    },
    {
      "when":  { "facing":  "east","door_open": true },
      "apply": { "model": "extfar:block/oil_furnace_door_open", "y": 270  }
    },
    {
      "when":  { "facing":  "west","door_open": true },
      "apply": { "model": "extfar:block/oil_furnace_door_open", "y": 90  }
    },

    {
      "when":  { "facing":  "north","door_open": false },
      "apply": { "model": "extfar:block/oil_furnace_door_closed", "y": 180  }
    },
    {
      "when":  { "facing":  "south","door_open": false },
      "apply": { "model": "extfar:block/oil_furnace_door_closed", "y": 0  }
    },
    {
      "when":  { "facing":  "east","door_open": false },
      "apply": { "model": "extfar:block/oil_furnace_door_closed", "y": 270  }
    },
    {
      "when":  { "facing":  "west","door_open": false },
      "apply": { "model": "extfar:block/oil_furnace_door_closed", "y": 90  }
    }
  ]
}